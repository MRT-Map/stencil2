# Maintainer: 7d <i.third.7d@protonmail.com>
pkgname=stencil2
pkgver=2.0.0
pkgrel=1
depends=('curl')
makedepends=('rustup')
arch=('x86_64' 'aarch64' 'armv7')
pkgdesc="Map editor for MRT Map data"
license=('GPL3')
url="https://github.com/mrt-map/stencil2"
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha256sums=('b80c6a7f0b1280faf18d239800effb865857ce2281ed7940dc0b3ed4fb1e598a')

build() {
  cd "$pkgname-$pkgver"
  rustup toolchain install nightly
  cargo +nightly build --release
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 target/release/$pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

post_remove() {
    rm -r "~/.local/share/stencil2"
}
