# Maintainer: 7d <i.third.7d@protonmail.com>
pkgname=stencil3
pkgver=3.0.0
pkgrel=1
depends=('curl')
makedepends=('dpkg')
arch=('x86_64' 'aarch64' 'armv7')
pkgdesc="Map editor for MRT Map data"
license=('GPL3')
url="https://github.com/mrt-map/stencil2"
source=("$pkgname-$pkgver.deb::$url/releases/download/v$pkgver/stencil3_${pkgver}_amd64.deb")
sha256sums=('c11cff52737048d34ec357f36ee9a1262344a673376fade66c1b35b802a8c45d')

if [[ -f PKGBUILD ]]; then
    cp PKGBUILD stencil3.install
fi
install=stencil3.install

package() {
    dpkg -x "$pkgname-$pkgver.deb" "$pkgdir/"
}

post_install() {
    update-desktop-database /usr/share/applications || true
}

post_remove() {
    rm -r "~/.local/share/stencil3" || true
    rm -r "~/.cache/stencil3" || true
}

